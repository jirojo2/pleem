section.ui.content
	padding-top: 8rem
	padding-bottom: 8rem
	h2.ui.header
		font-size: 3rem
	h3.ui.header
		font-size: 2rem
	h4.ui.header
		font-size: 1.5rem

.main.container
	padding-top: 6.5rem
	padding-bottom: 2rem

.vertical.masthead
	padding-top: 6.5rem
	h1
		font-size: 4em
		font-weight: 300

.ui.main.container.login-box
	padding-top: 13.4rem
	padding-bottom: 13.4rem
	.ui.card
		margin-top: 0

.hidden
	display: none !important

.ui.right
	float: right

.ui.top.menu
	.header.item:hover, .header.item:active, .header.item:focus
		background-color: inherit
	.ui.computer.tablet.only
		.ui.button
			padding: 0.71em
	.item
		font-size: 1.04em


.ui.vertical.navbar.menu
	box-shadow: none
	border: none
	border-radius: 0

.ui.mobile.only
	.item
		font-size: 1.2em;
	.right.menu.open
		.ui.button
			padding-left: 1rem
			padding-right: 1rem
			.icon
				margin: 0
		.toggle.item
			&.open
				background-color: #51bcea;
				.icon
					color: white !important
			.icon
				margin: 0

.ui.bottom.footer
	margin-top: 2rem
	.ui.list
		.item, item:hover
			.icon
				color: white;
	a
		color: white;

.ui.flex.center
	display: flex !important;
	align-items: center
	justify-content: center
	> *
		margin: 0;

.ui.blurring.dimmed
	> .bottom.buttons
		display: none

.ui.mt-4
	margin-top: 4rem

.ui.header.light
	font-weight: 300

.ui.custom.list
	margin-left: 1.5rem !important
	li
		&:before
			margin-left: -1.5rem !important
	.sublist
		margin: 0;
		padding-left: 1rem;
		display: block
		&.last, &:last-child
			margin-bottom: 1rem

#faq-rules-modal
	.ui.accordion
		.title
			p
				display: inline-block

#people
	.menu
		margin: 40px auto
	.people.container
		.ui.header
			margin-bottom: 40px
		.ui.horizontal.divider
			margin: 40px auto
			font-size: 1.28em


